#
# general bindings
#

# terminal
super + Return
    $TERMINAL

# program launcher
super + p
    rofi -combi-modi drun,window,ssh -show combi

# gui programs
super + {w,e,z}
    {$BROWSER,code,flameshot gui}

super + o ; {b,d,f,o,p,r,s,t,v,z}
    {blueman-manager,discord,pcmanfm,obs,bitwarden-desktop,rstudio-bin,steam,teamspeak3,code,zoom}

# terminal programs
super + {m,r,XF86AudioMute}
    $TERMINAL -e {ncmpcpp,ranger,pulsemixer}

#
# system controls
#

# volume controls
XF86Audio{LowerVolume,RaiseVolume,Mute,MicMute}
    volume-ctl {down,up,mute,mute-input}

super + {minus,equal}
    volume-ctl {down,up,mute,mute-input}

# music player controls
XF86Audio{Prev,Play,Next}
    playerctl {previous,play-pause,next}

super + ctrl + {comma,p,period}
    playerctl {previous,play-pause,next}

# brightness controls
XF86MonBrightness{Down,Up}
    brightness-ctl {down,up}

# reload sxhkd
super + shift + r
    pkill -USR1 -x sxhkd

# toggle compositor
super + shift + c
    killall picom || picom

# lockscreen
super + Escape
    betterlockscreen -l dim

# suspend on laptop close
XF86Sleep
    systemctl suspend

#
# rofi
#

super + shift + p
    bwmenu
