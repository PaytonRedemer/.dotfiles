#
# general bindings
#

# terminal
super + Return
    $TERMINAL

# program launcher
super + d
    rofi -combi-modi drun,window,ssh -show combi

# gui programs
super + {w,e,z}
    {$BROWSER,code,flameshot gui}

super + o ; {b,d,f,o,p,r,s,t,v,z}
    {blueman-manager,discord,pcmanfm,obs,bitwarden-desktop,rstudio-bin,steam,teamspeak3,code,zoom}

# terminal programs
super + {m,r,XF86AudioMute}
    $TERMINAL -e {ncmpcpp,ranger,pulsemixer}

# lockscreen
super + Escape
    betterlockscreen -l dim

# toggle compositor
super + c
    killall picom || picom

# reload sxhkd
super + shift + r
    pkill -USR1 -x sxhkd

#
# system controls
#

# volume controls
XF86Audio{LowerVolume,RaiseVolume,Mute}
    {pactl set-sink-volume @DEFAULT_SINK@ -5%, pactl set-sink-volume @DEFAULT_SINK@ +5%, pactl set-sink-mute @DEFAULT_SINK@ toggle}

# brightness controls
XF86MonBrightness{Down,Up}
    xbacklight {-dec 5,-inc 5} && dunstify -u low -t 3000 -r 90210 " $(printf %.0f%% $(xbacklight -get))"

# suspend on laptop close
XF86Sleep
    systemctl suspend

#
# rofi
#

super + p
    bwmenu

super + x
    textbooks.sh

super + shift + b
    microsoftBG.sh
